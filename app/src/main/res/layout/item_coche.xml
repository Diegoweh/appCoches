<!-- res/layout/item_coche.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Coche"/>

    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio del Coche"/>

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del Coche"/>

    <!-- Otros elementos según tus necesidades -->

</LinearLayout>
